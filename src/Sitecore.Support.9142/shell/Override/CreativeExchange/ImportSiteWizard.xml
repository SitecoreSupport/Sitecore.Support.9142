<?xml version="1.0" encoding="utf-8" ?>
<control xmlns:def="Definition" xmlns="http://schemas.sitecore.net/Visual-Studio-Intellisense">
  <ImportSiteWizard>
    <WizardForm CodeBeside="Sitecore.Support.XA.Feature.CreativeExchange.Wizards.ImportSiteWizard, Sitecore.Support.9142">
      <style>
        #AdditionaInfo .image-holder {float:left; width: 64px; height: 64px; text-align: center;}
        #AdditionaInfo .info {margin-left:8px;}
        #AdditionaInfo .commands {margin-left:72px; margin-top:8px;}
        #AdditionaInfo .commands span {display:block;}
        #AdditionaInfo .commands .scLinkCommandIcon, #AdditionaInfo .commands .scLinkCommandIcon_Hover {margin-right:2px; vertical-align:middle;}
      </style>

      <WizardFormPage ID="Settings" Header="Import settings" Text="Select the importing settings. Click Next to proceed.">
        <WizardFormPadding>
          <Border Margin="0px 0px 8px 0px">
            <Literal ID="ContextInfo" />
          </Border>
          <Scrollbox ID="SettingsPane" Border="none" Background="transparent">
            <Groupbox ID="StorageTypePanel" Header="Import from" Margin="8px 0px 8px 0px" Style="width: 350px;display:inline-block;vertical-align:top">
              <Border ID="StorageType"></Border>
            </Groupbox>
          </Scrollbox>
        </WizardFormPadding>
      </WizardFormPage>

      <WizardFormPage ID="SelectPackage" Header="Select package" Text="Select the source package. Click Next to proceed.">
        <WizardFormPadding>
          <GridPanel Width="100%" Height="100%" Fixed="true">

            <Toolbar>
              <Toolbutton Icon="Applications/16x16/refresh.png" Tooltip="Refresh the folder tree" Header="Refresh" Click="importsite:loadpackages"/>
              <Toolbutton Icon="Network/16x16/upload.png" Tooltip="Upload a file" Header="Upload" Click="importsite:uploadpackage"/>
              <Toolbutton Icon="Network/16x16/download.png" Tooltip="Download the selected file" Header="Download" Click="importsite:downloadpackage"/>
            </Toolbar>

            <GridPanel Width="100%" Height="100%" Fixed="true" GridPanel.Height="100%">
              <Listview ID="PackageList" Click="SelectPackageListItem" Background="window" GridPanel.Height="100%" Height="100%" Style="height:100%" Class="scScrollbox scFixSize scFixSizeNested" View="Icons" MultiSelect="false"/>
            </GridPanel>

            <Border Padding="4px 0px 4px 0px">
              <GridPanel Width="100%" Columns="2">
                <Border Padding="0px 4px 0px 0px" Width="8em">
                  <Literal Text="Package name:" />
                </Border>
                <Edit ID="PackageName" ReadOnly="true" Width="100%" GridPanel.Width="100%"/>
              </GridPanel>
            </Border>

          </GridPanel>
        </WizardFormPadding>
      </WizardFormPage>

      <WizardFormPage ID="Importing" Header="Importing" Text="Please wait while importing. This can take several minutes.">
        <GridPanel Width="100%">
          <Space Height="64"/>
          <Border Align="center" GridPanel.Align="center">
            <ThemedImage Src="Applications/48x48/import1.png" Width="48" Height="48" GridPanel.Align="center"/>
          </Border>
          <Space Height="16"/>
          <Border Align="center" GridPanel.Align="center">
            <ThemedImage Src="Images/progress.gif" Width="94" Height="17"/>
          </Border>
          <Space Height="16"/>
          <Border Align="center" GridPanel.Align="center" GridPanel.Style="font-weight:bold">
            <Literal Text="Importing..."/>
          </Border>
          <Space Height="16"/>
        </GridPanel>
      </WizardFormPage>

      <WizardFormPage ID="Results" Header="Results" Text="Review the importing results. Click on a message to get more details. Click Next to proceed.">
        <WizardFormPadding>
          <GridPanel Width="100%" Height="100%" Fixed="true">
            <Listview ID="MessageList" Background="window" GridPanel.Height="100%" Height="100%" Style="height:100%" Class="scScrollbox scFixSize scFixSizeNested" View="Details" MultiSelect="false">
              <ListviewHeader>
                <ListviewHeaderItem Header="Category" name="category"/>
                <ListviewHeaderItem Header="Comment" name="comment"/>
              </ListviewHeader>
            </Listview>
            <Scrollbox Background="window" GridPanel.Height="100%" Height="64px" Margin="8px 0px 0px 0px" Style="overlflow:visible;">
              <Border ID="AdditionaInfo" Width="100%" Height="100%" GridPanel.Height="100%"/>
            </Scrollbox>
          </GridPanel>
        </WizardFormPadding>
      </WizardFormPage>

      <WizardFormPage ID="LastPage" Header="Import complete">
        <WizardFormPadding>
          <Border ID="Success" Visible="false">
            <Border Style="font-weight:bold" Margin="0px 0px 16px 0px">
              <Literal Text="The import has succeeded."/>
            </Border>
          </Border>
          <Border ID="Error" Visible="false">
            <Border Style="font-weight:bold" Margin="0px 0px 16px 0px">
              <Literal Text="The import has failed."/>
            </Border>
            <Border Margin="0px 0px 16px 0px">
              <Literal Text="Please review the errors below."/>
            </Border>
            <Memo ID="ErrorMessage" ReadOnly="true" Width="100%" Height="200px" Margin="0px 0px 16px 0px"/>
          </Border>
          <Border Margin="0px 0px 16px 0px">
            <Literal Text="Click 'Close' button to close the wizard."/>
          </Border>
        </WizardFormPadding>
      </WizardFormPage>

    </WizardForm>
  </ImportSiteWizard>
</control>